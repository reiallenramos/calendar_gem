<p id="notice"><%= notice %></p>

<h1>Meetings</h1>
<div id="calendar-wrapper">
  <div class="calendar-sidebar">
    <div class="calendar-sidebar-item">
      <button id="toggle-calendar-view">Month View</button>
    </div>
    <div class="calendar-sidebar-item">
      hello
    </div>
    <div class="calendar-sidebar-item">
      world
    </div>
  </div>
  <div class="month-view-container">
    <%= render :partial => 'month_view' %>
  </div>
  <div class="week-view-container">
    <%= render :partial => 'week_view' %>
  </div>
</div>

<br>

<table>
  <%= link_to 'New Meeting', new_meeting_path %>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.start_time %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

